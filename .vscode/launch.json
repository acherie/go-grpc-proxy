    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Client",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${fileDirname}",
            "args": [
                "-verbose",
                 "-c",
                "localhost:4673",
                "-socks",
                ":1080"
            ]
        },
        {
            "name": "Launch Server",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${fileDirname}",
            "args": [
                "-verbose",
                "-s",
                ":4673",
            ]
        }
    ]
}